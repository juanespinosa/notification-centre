{
  "short_name": "Notification Centre",
  "manifest_version": 2,
  "name": "Notification Center for Arrive",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/arrive-favicon.png",
      "32": "images/arrive-favicon.png",
      "48": "images/arrive-favicon.png",
      "128": "images/arrive-favicon.png"
    }
  },
  "icons": {
    "16": "images/arrive-favicon.png",
    "32": "images/arrive-favicon.png",
    "48": "images/arrive-favicon.png",
    "128": "images/arrive-favicon.png"
  },
  "permissions": [
      "storage",
      "cookies", 
      "tabs",
      "https://*.arrivelogistics.com/*"
  ],
  "version": "1.0"
}
